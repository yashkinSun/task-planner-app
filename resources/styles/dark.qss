/* Темная тема для Todo-Timed в стиле Windows 11 */

/* Основные цвета */
QWidget {
    background-color: #202020;
    color: #ffffff;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 14px;
}

/* Главное окно */
QMainWindow {
    background-color: #1e1e1e;
}

/* Кнопки */
QPushButton {
    background-color: #2d2d30;
    border: 1px solid #3f3f46;
    border-radius: 4px;
    padding: 8px 16px;
    min-height: 20px;
    font-weight: 400;
    color: #ffffff;
}

QPushButton:hover {
    background-color: #3e3e42;
    border-color: #4f4f55;
}

QPushButton:pressed {
    background-color: #4f4f55;
    border-color: #5f5f65;
}

QPushButton:disabled {
    background-color: #2d2d30;
    color: #6d6d70;
    border-color: #3f3f46;
}

/* Основная кнопка */
QPushButton[primary="true"] {
    background-color: #0078d4;
    color: #ffffff;
    border-color: #0078d4;
}

QPushButton[primary="true"]:hover {
    background-color: #106ebe;
    border-color: #106ebe;
}

QPushButton[primary="true"]:pressed {
    background-color: #005a9e;
    border-color: #005a9e;
}

/* Поля ввода */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #2d2d30;
    border: 1px solid #3f3f46;
    border-radius: 4px;
    padding: 8px;
    color: #ffffff;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #0078d4;
    border-width: 2px;
}

/* Комбо-боксы */
QComboBox {
    background-color: #2d2d30;
    border: 1px solid #3f3f46;
    border-radius: 4px;
    padding: 8px;
    min-width: 100px;
    color: #ffffff;
}

QComboBox:hover {
    border-color: #4f4f55;
}

QComboBox:focus {
    border-color: #0078d4;
    border-width: 2px;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

